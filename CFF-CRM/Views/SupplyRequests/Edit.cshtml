            <h4>Note Section</h4>
            <table>
                <thead>
                    <tr>
                        <td>Note ID</td>
                        <td>Note</td>
                        <td>CreatedBy</td>
                        <td>CreatedDate</td>
                        <td>Archieved</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var note in ViewBag.Notes)
                    {
                        <tr>
                            <td>
                                @note.NoteId
                            </td>
                            <td>
                                @note.note.Content
                            </td>
                            <td>
                                @note.note.CreatedBy
                            </td>
                            <td>
                                @note.note.CreatedDate
                            </td>
                            <td>
                                @note.note.Archived
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="input-field col s12">
                    <span class="material-icons prefix">edit</span>
                    <textarea class="materialize-textarea" name="@nameof(Note.Content)"></textarea>
                    <label>Note Section</label>
                </div>
            </div>
            <div class="input-field col s6">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
