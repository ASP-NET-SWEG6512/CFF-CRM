@model CFF_CRM.Models.SupplyRequest
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Edit Supply Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>SupplyRequest</h4>
<hr />
<div class="row">
    <div class="col s12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SupplyRequestId" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="CreatedTime" />
            <div class="row">
                <div class="input-field col s6">
                    <select asp-for="StatusId" asp-items="ViewBag.StatusId"></select>
                    <label asp-for="StatusId">Status</label>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>
                <div class="input-field col s6">
                    <select asp-for="OrderItemId" asp-items="ViewBag.OrderItemId"></select>
                    <label asp-for="OrderItemId">Order Item</label>
                    <span asp-validation-for="OrderItemId" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <select asp-for="SupplyRequestOriginId" asp-items="ViewBag.SupplyRequestOriginId"></select>
                    <label asp-for="SupplyRequestOriginId">Supply Request Origin</label>
                    <span asp-validation-for="SupplyRequestOriginId" class="text-danger"></span>
                </div>
                <div class="input-field col s6">
                    <select asp-for="SupplyRequestTypeId" asp-items="ViewBag.SupplyRequestTypeId"></select>
                    <label asp-for="SupplyRequestTypeId"></label>
                    <span asp-validation-for="SupplyRequestTypeId" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">textsms</i>
                    <input asp-for="ClientName" type="text" id="ClientName" class="autocomplete-client" />
                    <label asp-for="ClientName">Client Name</label>
                    <span asp-validation-for="ClientName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">textsms</i>
                    <input asp-for="OwnerName" type="text" id="OwnerName" class="autocomplete-owner" />
                    <label asp-for="OwnerName">Owner Name</label>
                    <span asp-validation-for="OwnerName" class="text-danger"></span>
                </div>
            </div>
            <h4>Note Section</h4>
            <table id="noteTable">
                <thead>
                    <tr>
                        <td>Note</td>
                        <td>CreatedBy</td>
                        <td>CreatedDate</td>
                        <td>Archieved</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var note in ViewBag.Notes)
                    {
                        <tr>
                            <td contenteditable='true'>
                                @note.note.Content
                            </td>
                            <td>
                                @note.note.CreatedBy
                            </td>
                            <td>
                                @note.note.CreatedDate
                            </td>
                            <td>
                                <input type="checkbox" />
                                @note.note.Archived
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="input-field col s12">
                    <span class="material-icons prefix">edit</span>
                    <textarea id="tempNote" class="materialize-textarea" name="@nameof(Note.Content)"></textarea>
                    <label>Note Section</label>
                </div>
            </div>
            <div class="input-field col s6">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @*Autocomplete data*@
    <script>
        $('input.autocomplete-owner').autocomplete({
            data: { Apple: null, Microsoft: null, Google: null }
        });
        $('input.autocomplete-client').autocomplete({
            data: { Apple: null, Microsoft: null, Google: null }
        });
    </script>
}
