@model PasswordViewModel
@{
    ViewBag.Title = "Change Password";
    var isSuccess = (bool)(TempData["IsSuccess"] ?? false);
    var isFail = (bool)(TempData["IsFail"] ?? false);
    var userId = (string)ViewBag.UserId ?? "";
}

<h1>Change Password</h1>

@if (isSuccess)
{
    <div class="alert alert-success" role="alert">
        Changed password successfully!
    </div>
}
@if (isFail)
{
    <div class="alert alert-danger" role="alert">
        Failed to change password!
    </div>
}

<form method="post" asp-action="ChangePassword">
    <input type="hidden" asp-for="UserId" value="@userId" />
    <div class="form-group row">
        <div class="col-sm-2"><label>Your current Password:</label></div> <div class="col-sm-4">
            <input type="password" asp-for="OldPassword" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>New Password:</label></div> <div class="col-sm-4">
            <input type="password" asp-for="NewPassword" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Confirm New Password:</label></div> <div class="col-sm-4">
            <input type="password" asp-for="ConfirmNewPassword" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Change Password</button>
        </div>
    </div>
</form>

